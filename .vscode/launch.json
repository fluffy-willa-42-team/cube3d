{
	"version": "0.2.0",
	"configurations": [
		{
		"name": "debug cube3d Linux",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceRoot}/cube3d",
		"args": ["map.cub"],
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}",
		"environment": [],
		"MIMode": "gdb",
		"miDebuggerPath": "/usr/bin/gdb",
		"setupCommands": [
			{
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
			}
		],
		},
		{
			// for MacOS
			"name": "debug cube3d MacOs",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceRoot}/cube3d",
			"args": ["map.cub"],
			"stopAtEntry": false,
			"cwd": "${workspaceRoot}",
			"environment": [],
			// "externalConsole": true,
			"MIMode": "lldb"
		  },
	]
  }