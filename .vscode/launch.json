{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "debug cube3d",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceRoot}/cube3d",
		"args": ["map.cub"],
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}",
		"environment": [],
		// "externalConsole": false,
		"MIMode": "gdb",
		"miDebuggerPath": "/usr/bin/gdb",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		],
	  }
	]
  }